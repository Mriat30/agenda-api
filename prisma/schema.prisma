generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  telegram_id String       @unique
  name        String
  last_name   String
  phone       String       @unique
  address     String
  TurnoUnico  TurnoUnico[]
}

model Agenda {
  id                      String                    @id @default(uuid())
  nombre                  String
  duracionTurnosEnMinutos Int                       @map("duracion_turnos_minutos")
  horariosDeAtencion      HorarioDeAtencionPorDia[]
  turnos                  TurnoUnico[]

  @@map("agenda")
}

model HorarioDeAtencionPorDia {
  id         String   @id @default(uuid())
  dia        String   // LUNES, MARTES...
  horaInicio DateTime @map("hora_inicio")
  horaFin    DateTime @map("hora_fin")
  activo     Boolean  @default(true)
  agendaId   String   @map("agenda_id")
  
  agenda     Agenda   @relation(fields: [agendaId], references: [id])

  @@map("horario_atencion_dia")
}

model TurnoUnico {
  id         String   @id @default(uuid())
  telegramId String   @map("telegram_id")
  masaje     String
  horaInicio DateTime @map("hora_inicio")
  horaFin    DateTime @map("hora_fin")
  fecha      DateTime @db.Date
  estado     String
  agendaId   String   @map("agenda_id") // Nueva FK

  user   User   @relation(fields: [telegramId], references: [telegram_id])
  agenda Agenda @relation(fields: [agendaId], references: [id])

  @@map("turno_unico")
}